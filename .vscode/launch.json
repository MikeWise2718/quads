{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Attach to ... something",
      "type": "python",
      "request": "attach",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "port": 3000,
      "host": "localhost",
      "subProcess": true,
      "runtimeArgs": [
        "-preserve-symlinks",
        "-preserve-symlinks-main",
      ]
    },
    {
      "name": "Python: Attach to windows",
      "type": "python",
      "request": "attach",
      "port": 3000,
      "host": "127.0.0.1",
    }
  ]
}